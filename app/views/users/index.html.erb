<div class="head-under fl">Users</div>
<%= link_to('Update My Email / Password', edit_user_path(current_user), class: 'ml10 fl') %>
<div class="reset"></div>
<% if @users.any? %>
    <table class="nice" cellpadding="0" cellspacing="0">
      <tbody>
      <tr>
        <th><div style="padding: 3px 5px;">Email</div></th>
        <th>Customer</th>
        <th>Last login</th>
        <th></th>
      </tr>
      <% @users.each do |user| %>
          <tr>
            <td style="padding: 5px;"><%= user.email %></td>
            <td><%= user.customer.try(:full_name) %></td>
            <td><%= user.last_login.try(:in_time_zone, 'Hawaii').try(:strftime, '%d %b %H:%M %p') || 'Never' %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% else %>
    <div class="pad">No Users</div>
<% end %>