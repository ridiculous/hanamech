<div class="fr shaded bb" style="border-right: 1px solid #666;width: 80px">
    <div class="num shaded" style="height: 42px;padding-right: 3px;"><%= f.text_field(:balance_due, class: 'num table-input', style: 'margin-top: 8px;') %></div>
