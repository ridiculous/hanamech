<%= form_for(@customer) do |f| %>
    <%= errors_for(@customer) %>

    <div class="field">
      <%= f.label :name %>
      <br/>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :phone_number %>
      <br/>
      <%= f.text_field :phone_number %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <br/>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :street %>
      <br/>
      <%= f.text_field :street %>
    </div>

    <div class="field">
      <%= f.label :city_state, 'City, State' %>
      <br/>
      <%= f.text_field :city_state %>
    </div>
    <div class="actions">
      <%= f.submit %>
      <%= link_to 'Cancel', (@customer.id.nil? ? customers_path : customer_path(@customer)) %>
    </div>
<% end %>
