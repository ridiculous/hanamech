<div class="head-under fl">Car List</div>
<%= link_to('New Car', my_new_car_path, class: 'ml10 fl') %>
<div class="reset"></div>
<% if @cars.any? %>
    <%= render_paging %>
    <table cellpadding="5" cellspacing="0" class="nice">
      <tr>
        <th><%= sortable "car_make", "Car make" %></th>
        <th><%= sortable "car_model", "Car model" %></th>
        <th><%= sortable "year" %></th>
        <th>Vin number</th>
        <th>Customer</th>
        <th></th>
        <th style="width: 130px;"></th>
        <th></th>
      </tr>
      <% @cars.each do |car| %>
          <tr>
            <td><%= link_to car.car_make, my_car_path(car) %></td>
            <td><%= car.car_model %></td>
            <td><%= car.year %></td>
            <td><%= car.vin_number %></td>
            <td><%= car.customer.try(:full_name) %></td>
            <td><%= link_to 'Edit', edit_customer_car_path(car.customer, car) %></td>
            <td><%= link_to 'Workorders', car_workorders_path(car) %> <%= "(#{car.workorders.count})" %></td>
            <td><%= link_to 'Delete', my_car_path(car), data: {confirm: "Are you sure you want to delete this #{car.car_make}? All work orders for this car will also be deleted!"}, method: :delete, class: 'delete' %></td>
          </tr>
      <% end %>
      <tr>
        <td colspan="9">
          <% if @cars.count > 14 %>
              <hr/>
              <p style="text-align: center; color: #66B7E7; font-size: 18px">>>><a href="#top">Top</a><<<</p>
          <% end %>
        </td>
      </tr>
    </table>
<% else %>
    <br/>
    <p><span class="noneyet">
        <b> <%= "No cars on record" %> </b>
      </span>
    </p>
<% end %>


