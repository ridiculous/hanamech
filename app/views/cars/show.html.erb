<div class="pb10">
  <%= link_to 'Edit', my_edit_car_path if can?(:update, @car) %>
  <% if can?(:destroy, @car) %>
      <%= link_to 'Delete', my_car_path, data: {confirm: "Are you sure you want to delete this #{@car.car_make}? All work orders for this car will also be deleted!"}, method: :delete, class: 'delete' %>
  <% end %>
  <%= link_to "Work Orders (#{@car.workorders.count})", car_workorders_path(@car) %>
  <%= link_to 'New Work Order', new_car_workorder_path(@car) if can?(:create, Workorder) %>
</div>

<div class="fl box">
  <p>
    <b>Year<span class="spacer">&sdot;</span>Make<span class="spacer">&sdot;</span>Model</b>
  </p>
  <%= @car.year_make_model %>
</div>
<div class="fl box">
  <p>
    <b>Engine size</b>
  </p>
  <%= @car.engine_size %>
</div>
<div class="fl box">
  <p>
    <b>Vin number</b>
  </p>
  <%= @car.vin_number %>
</div>
<div class="fl box">
  <p>
    <b>Odometer</b>
  </p>
  <%= @car.odometer %>
</div>
<div class="c"></div>
